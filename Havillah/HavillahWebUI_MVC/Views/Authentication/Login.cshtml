@model HavillahWebUI_MVC.Models.Authentication.LoginDto

@{
    Layout = "_AuthenticationLayout";
}


<div class="text-center mt-2">
    <h5 class="text-primary">Welcome Back !</h5>
    <p class="text-muted">Sign in to continue to HIMS.</p>
</div>
<div class="p-2 mt-4">
    <form asp-controller="Authentication" asp-action="Login" method="Post">
        <div class="mb-3">
            <label for="username" class="form-label" asp-for="Email">Email</label>
            <input type="text" class="form-control" id="username" placeholder="Enter username" asp-for="Email">
        </div>
        <div class="mb-3">
            <div class="float-end">
                <a href="auth-pass-reset-basic.html" class="text-muted">Forgot password?</a>
            </div>
            <label class="form-label" for="password-input" asp-for="Password">Password</label>
            <div class="position-relative auth-pass-inputgroup mb-3">
                <input type="password" class="form-control pe-5 password-input" placeholder="Enter password" id="password-input" asp-for="Password">
                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="submit" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
            </div>
        </div>
        @* <div class="form-check"> *@
        @*     <input class="form-check-input" type="checkbox" value="" id="auth-remember-check"> *@
        @*     <label class="form-check-label" for="auth-remember-check">Remember me</label> *@
        @* </div> *@
        <div class="mt-4">
            <button class="btn btn-success w-100" type="submit">Sign In</button>
        </div>
    </form>
</div>